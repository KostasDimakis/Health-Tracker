<article class="col-xs-6 col-sm-4 col-md-3 col-lg-2">
  <figure class="thumbnail thumbnail--no-border card">
    <button type="button" class="close" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
    <img src="<%= img %>" alt="banana">
    <figcaption class="caption">
      <p class="nutrients">
        <span class="calories" title="Calories"><%= calories %></span>
        <span class="protein" title="Proteins"><%= proteins %></span>
        <span class="carbs" title="Carbs"><%= carbohydrates %></span>
        <span class="fat" title="Fats"><%= fats %></span>
      </p>
      <p class="date text-right">
        <%= date %>
      </p>
    </figcaption>
  </figure>
</article>

